<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editCaption"
        class="com.company.entityinheritance.gui.person.PersonEdit"
        datasource="personDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.entityinheritance.gui.person">
    <dsContext>
        <datasource id="personDs"
                    class="com.company.entityinheritance.entity.Person"
                    view="_local"/>
    </dsContext>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="personDs">
            <column width="250px">
                <field id="firstName"/>
                <field id="lastName"/>
                <field id="email"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
